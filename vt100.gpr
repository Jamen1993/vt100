project VT100 is

   for Languages use ("Ada");
   for Source_Dirs use ("src");
   for Object_Dir use "build";

   for Library_Name use "vt100";
   for Library_Kind use "static";
   for Library_Dir use "lib";

   package Compiler is
      for Default_Switches ("ada") use ("-gnatyy", "-gnatyM100", "-gnatwa.n", "-gnatf", "-gnato", "-gnata", "-gnatVa", "-O3");
   end Compiler;

   package Builder is
      for Switches ("ada") use ("-j0");
   end Builder;

end VT100;
